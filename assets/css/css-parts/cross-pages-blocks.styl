/*! 
	Оформление для блока со строкой поиска и основным меню
*/
.row.menu-and-search
	height 60px
	position relative

	.menu-main 
		padding-right 0px
		// background #22b5cd
		
		> a
			color white
			text-align center
			height 100%
			line-height 60px
			background url("../images/sandwich-button.png") light-blue-color;
			background-repeat no-repeat
			background-position 10px center
			display block
			text-decoration none
			padding-left 40px
			text-align left
			
		> a:hover
			background url("../images/sandwich-button.png") black no-repeat 10px center;
			
	> .collapse, .collapse.in, .collapsing
		position: absolute;
		background: white; 
		max-width: 300px
		z-index 100
		top 60px
		padding-left: 0px;
		margin-left: 15px;
		
		> ul
			margin 0px 
			padding 0px
			width 300px
			list-style-type none
			
			li .submenu 
				display none
				position absolute
				top 0px 
				left 300px
				width 838px
				background white
				padding 7px 0px 7px 0px
				height 100%
				box-shadow 1px 1px 10px black
				font-family normal-font
				
				
				> ul 
					list-style-type none
					
					> li
						font-family bold-font
						margin-bottom 10px
						
						> ul
							font-family normal-font
							list-style-type none
				
			li a
				background url("../images/arrow-to-bottom.png") black no-repeat 280px center;
				background black
				color white
				padding 5px 
				text-decoration none
				display block
				padding 7px 20px 7px 20px
		
			li a:hover
				background url("../images/arrow-to-bottom.png") #22b5cd no-repeat 280px center;;
				
			li a:hover + .submenu,  li a + .submenu:hover
				display block

	> .search-field
		height 100%
		padding-left 0px
		
		input
			border 3px solid light-blue-color
			display block
			height 54px
			outline none
			padding 0px 10px 0px 40px
			line-height 54px
			width 100%
			height 100%
			background url("../images/icon-search.png") no-repeat 10px center
			font-family light-font
