/*! 
	Навигационная панель в шапке.
*/

.navbar	
	background dark-black-color
	border-radius 0px
	// height 49px
	text-transform uppercase
	border: none;
		
	.navbar-nav > li
		font-size: 11px;
		font-weight: 400
		color white
		line-height 49px
		
		
		// > a:first-child:not(.navbar-right)
		// 	padding-left 0px
		
		> a, a:visited 
			color white
			position relative
			padding-left 30px
			vertical-align middle
			font-family light-font
			
			> .badge
				margin-left 10px
				padding: 6px 10px;
				display: inline-block;
				vertical-align: top;
				
		> a:hover
			background-color dark-black-color
				
		> a:hover, a:active
			color light-blue-color
			background none
		
		> a:after
			content " | "
			position: absolute;
			top: 14px;
			right: -7px;
			color: #4f4f4f;
			
	.navbar-nav > li:last-child > a:after
		display none
			
	.navbar-nav > li.active a 
		background initial
		color light-blue-color
		
