	// ----- Начало разметки для страницы "КАРТОЧКА ТОВАРА"		
	.row.section.kartochka-tovara
		padding 40px 15px 15px 15px
		margin 0px
		
		#main-image
			width 390px
			height 390px
			display inline-block
			text-align center
			vertical-align top
			
		.image-list
			width 70px
			display inline-block
			
			
			> div
				width 70px
				height 70px
				text-align center
				line-height 70px
				
			> div.active
				border 2px solid light-blue-color				
				
		.row.variants 
			
				
			> .line
				border-bottom 1px solid light-grey-color
				
			> div:first-child
				font-family bold-font
				color: #2e2e2e;
				font-size: 18px;
				text-transform: uppercase;
				margin-top 40px
				
			> div
				color: #2e2e2e;
				font-size: 15px;
				margin-bottom 40px
				line-height: 34px;
				
				> select
					display block
					border-radius initial
					border none
					outline none
					color: #2e2e2e;
					font-size: 13px;
					padding 0px 10px
					
				> .price
					font-size: 30px;
					font-family norma-font
					font-weight lighter
					
					> span
						font-family bold-font
		
		.additional_block
			
			> .rate
				padding 0px 10px
				line-height 40px
				float left
				
				> .num 
					background url("../images/rateback.png") no-repeat left center
					line-height 40px
					display block
					width 44px
					padding-left 8px 
					float left
					margin-right 5px
					vertical-align middle
					
				> .est
					float right
				
			> .icons
				padding 0px 10px
				margin-bottom 10px
				float right
				
				> * 
					margin-right 5px
					border: 1px solid #cbcbcb;
					width 40px
					height 40px
					text-align center
					line-height 40px
					display inline-block
					
	.row.section.kartochka-tovara-features
		background #ededed
		margin-bottom 0px
		
		> div
						
			> img
				display inline-block
				vertical-align top
		
			> div
				display inline-block
				margin-left 20px
			
				> span
					font-family bold-font
					
				> ul > li
					margin-bottom 10px
					
	.row.section > .tab-content .harakteristiki 
		
		li
			display block
			background url("../images/dots-background.jpg") repeat-x bottom left
			
	// ----- Завершение разметки для страницы "КАРТОЧКА ТОВАРА"				
				

	.row.section.cart-list .row.one-line
		
		> div:first-child
			text-align left
			font-size 18px
			line-height 48px
			
		> div
			line-height 48px
			
		> div:last-child
			text-align right
			
	// ----- Начало разметки для страницы "ОФОРМЛЕНИЕ ЗАКАЗА"
				
	.row.pokupatel
		
		.row.one-line
			height 70px
			margin-bottom 20px
			
			> div:first-child
				color: #2e2e2e;
				font-size: 16px;
				height: 100%;
				line-height: 70px;
				
			> div:nth-of-type(3)
				padding-left 20px
				color: #2e2e2e;
				line-height: 34px;

			> div
				vertical-align bottom

				input
					background-color: white;
					border: 1px solid #d2d2d2;
					width 364px
					outline none
					padding 5px 40px 5px 20px
					color: #2e2e2e;
					
				input.correct
					border: 1px solid #93cd22;
					box-shadow: 0 0 5px #b6dd6b;
					background url("../images/icon-correct.png") #ecf7d8 no-repeat 324px center;

				input.incorrect
					background url("../images/icon-incorrect.png") #fce4df no-repeat 324px center;
					border: 1px solid #e35b40;
					box-shadow: 0 0 5px #eaa79a;
					
			> div:nth-of-type(2) > label
				font-size: 14px;
				margin-left 10px
				margin-bottom 5px
				display block
				
	.row.dostavka
		
		input
			margin-right 20px
			
		.form-group
			margin-bottom 20px
			
			> .checkbox
				
				> label
					font-family bold-font
					color: #2e2e2e;
					font-size: 18px;
				
				> span
					font-family norma-font
					color: #747474;
					font-size: 14px;
					margin-left 53px
					display inline-block
					
		.adres 
			
			h3
				font-size: 16px;
				font-family bold-font
				margin-top 7px
				
			.form-control
				border-radius 0px
				border 1px solid #b0b3b7;
			
			> .row > div:not(:last-child)
				margin-bottom 20px
					
