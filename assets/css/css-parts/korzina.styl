.container.content.cart
	
	.product-list
		margin 0px
		
		input[type=checkbox]
			position: absolute;
			left: 10px;
			top: 50%;
			margin-top: -10px;
			box-shadow: 0 0 5px #d3edf1;
	
	.row.section.quick-order-form > div
		margin-bottom 20px
		padding-bottom: 20px;

		input
			border: 2px solid #d2d2d2;
			height 58px
			line-height 58px
			font-size: 14px;
			border-radius 0px
			
		button
			color: #2e2e2e;
			font-size: 18px;
			border: 2px solid #22b5cd;
			outline none
			display block
			text-align center
			border-radius 0px
			width 100%
			height 58px
			vertical-align middle
			
			&:hover
				background #22b5cd;
				transition all 0.33s
				color white
				
		p.summ-itog
			color: #2e2e2e;
			font-size: 18px;
			text-align right
			
			span 
				color light-blue-color

		button.order-submit
			background-color: #22b5cd;
			display inline-block
			color white
			width: 266px;