.container.content.order-confirmation 
	
	.row.section.pokupatel
	
		.row.one-line
			height 70px
			margin-bottom 20px
			
			> div:first-child
				color: #2e2e2e;
				font-size: 16px;
				height: 100%;
				line-height: 70px;
				
			> div:nth-of-type(3)
				padding-left 20px
				color: #2e2e2e;
				line-height: 34px;

			> div
				vertical-align bottom

				input
					background-color: white;
					border: 1px solid #d2d2d2;
					width 364px
					outline none
					padding 5px 40px 5px 20px
					color: #2e2e2e;
					
				input.correct
					border: 1px solid #93cd22;
					box-shadow: 0 0 5px #b6dd6b;
					background url("../images/icon-correct.png") #ecf7d8 no-repeat 334px center;

				input.incorrect
					background url("../images/icon-incorrect.png") #fce4df no-repeat 334px center;
					border: 1px solid #e35b40;
					box-shadow: 0 0 5px #eaa79a;
					
			> div:nth-of-type(2) > label
				font-size: 14px;
				margin-left 10px
				margin-bottom 5px
				display block
				
	.row.dostavka
		
		input
			margin-right 20px
			
		#city-list
			border 1px solid #eeeeee
			position absolute
			top 40px
			background white
			left 112px
			padding 10px
			z-index 100
			
			> ul
				margin 0px
				padding 0px
				list-style-type none
				
				li
					color light-blue-color
					font-size 16px
					margin-bottom 10px
			
		.form-group
			margin-bottom 20px
			
			> .checkbox
				
				> label
					font-family bold-font
					color: #2e2e2e;
					font-size: 18px;

					> label
						position relative
						box-shadow: 0 0 7px #d3edf1;
						width 7px
						height 7px
						border-radius 50%
						vertical-align middle
						margin-right 15px
						border-radius 50%
				
					> input[type='radio']
						display none
						
					> input[type='radio']:checked + label:after
						display inline-block
						content "â—"
						text-align left
						position absolute
						left: 4px;
						bottom: -4px;
						font-size 23px
						color dark-black-color
						
				> span
					font-family normal-font
					color: #747474;
					font-size: 14px;
					margin-left 53px
					display inline-block
					
		.adres 
			
			h3
				font-size: 16px;
				font-family bold-font
				margin-top 7px
				
			.form-control
				border-radius 0px
				border 1px solid #b0b3b7;
			
			> .row > div:not(:last-child)
				margin-bottom 20px
					
