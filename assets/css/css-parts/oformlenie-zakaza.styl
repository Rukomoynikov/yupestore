.container.content.order-confirmation 
	
	.row.section.pokupatel
	
		.row.one-line
			height 70px
			margin-bottom 20px
			
			> div:first-child
				color: #2e2e2e;
				font-size: 16px;
				height: 100%;
				line-height: 70px;
				
			> div:nth-of-type(3)
				padding-left 20px
				color: #2e2e2e;
				line-height: 34px;

			> div
				vertical-align bottom

				input
					background-color: white;
					border: 1px solid #d2d2d2;
					width 364px
					outline none
					padding 5px 40px 5px 20px
					color: #2e2e2e;
					
				input.correct
					border: 1px solid #93cd22;
					box-shadow: 0 0 5px #b6dd6b;
					background url("../images/icon-correct.png") #ecf7d8 no-repeat 324px center;

				input.incorrect
					background url("../images/icon-incorrect.png") #fce4df no-repeat 324px center;
					border: 1px solid #e35b40;
					box-shadow: 0 0 5px #eaa79a;
					
			> div:nth-of-type(2) > label
				font-size: 14px;
				margin-left 10px
				margin-bottom 5px
				display block
				
	.row.dostavka
		
		input
			margin-right 20px
			
		.form-group
			margin-bottom 20px
			
			> .checkbox
				
				> label
