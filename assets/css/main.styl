.container-fluid.footer
	background-color: dark-black-color
	color white
	padding 50px 0px 0px 0px
	
	.contacts img
		margin-right 10px
		
	
	.subtitle
		font-family "OpenSansBold"
		display block
		font-size: 18px;
		margin-bottom 40px
		
	ul li
		margin-bottom 15px
		
		a 
			color white
			
.row.you-seen 
	
	> .col-lg-4:nth-of-type(3n)
		margin-right 0px
	
	> .col-lg-4
		border 1px solid #d2d2d2;
		padding 30px 45px
		margin-right 20px
		max-width 376px
		
		> img
			margin-right 50px
		
		> a
			color: light-blue-color
			font-size: 13px;
			display inline-block
			vertical-align middle
		
@media screen and (max-width: 480px)

	.formobile
		display inline-block !important
		float left
		
		a
			padding 12px !important
			display inline-block
			
			img
				margin-right 5px
		
	#navbar-collapse
		position: relative
		z-index 1000
		background black
		border none
		
	.row.you-seen > .col-lg-4
		margin-bottom 20px