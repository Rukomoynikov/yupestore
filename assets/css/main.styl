.light-blue
	background-color: light-blue-color

.text-uppercase
	text-transform uppercase

.badge 
	font-size 11px
	vertical-align middle
	
.navbar-collapse
	padding 0px
	
.white-container
	background white
	padding 45px 0px

.yellow-container
	background white
