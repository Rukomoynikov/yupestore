.container.main
	// padding-bottom 112px
		
.container.content
	padding-bottom 112px
	
	.page-header
		border-bottom 0px
		margin 10px 0px 20px
		
	.row.section
		
		.table-cell.title
			font-size 18px
			line-height 48px
		
	.row.dostavka select
		border: none;
		background-color: white;
		padding-right: 10px;
		color light-blue-color
	
.navbar	
	background dark-black-color
	border-radius 0px
	height 49px
	text-transform uppercase
		
	.navbar-nav > li
		font-size: 11px;
		font-weight: 400
		color white
		line-height 49px
		
		// > a:first-child:not(.navbar-right)
		// 	padding-left 0px
		
		> a, a:visited 
			color white
			position relative
			padding-left 30px
			vertical-align middle
			
			> .badge
				margin-left 10px
				padding: 6px 10px;
				display: inline-block;
				vertical-align: top;
				
		> a:hover
			color light-blue-color
		
		> a:after
			content " | "
			position: absolute;
			top: 14px;
			right: -7px;
			color: #4f4f4f;
			
	.navbar-nav > li:last-child > a:after
		display none
			
	.navbar-nav > li.active a 
		background initial
		color light-blue-color
		
.navbar-right
	font-size 13px
	text-transform initial
	margin-right 0px
	
	a:after
		content ""
		display none

	
	.favicon a
		background url("../images/icon-heart.png")
		background-position left center
		background-repeat no-repeat
		
	.compare a
		background url("../images/icon-compare.png")
		background-position left center
		background-repeat no-repeat
		
	.login 
				
		a
			width: 97px;
			height: 35px;
			border: 1px solid #22b5cd;
			display inline-block
			vertical-align middle
			padding 0px
			line-height 32px
			padding-left 20px !important

.navbar-right .favicon img, .navbar-right .compare img, .navbar-right .login img
	margin-right 10px


	

