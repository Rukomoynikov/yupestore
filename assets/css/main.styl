.header
	margin-bottom 40px
		
	> .logo
		line-height 78px
		color #b8b8b8
		
		> img
			margin-right 30px
			
	.phone-and-cart
		text-align right
		
		> .phone
			display inline-block
			color: dark-black-color
			font-size: 18px;
			font-family "OpenSansBold"
			height 78px
			text-align center
			margin-right 40px
			line-height 20px
			padding-top 25px
					
			> a
				color: light-blue-color;
				font-size 13px
				font-family "OpenSansRegular"
				border-bottom 1px dashed light-blue-color
				text-decoration none
				cursor pointer
				
				&hover
					border-bottom 1px solid light-blue-color
				
		> .cart-header-block
			display inline-block
			position relative
			padding-top 19px
			text-align left
				
			> img 
				margin-right 20px
				margin-top 6px
				
			> .cart-header
				color: dark-black-color
				font-size: 16px;
				font-family "OpenSansBold"
				
			> .badge
				position absolute
				left 30px
				top 20px
				
			> .summ
				color: #959595;
				
				> span
					color: #555;
					
			> a > img
				margin-left 10px
					
			> .cart-block
				position absolute
				background white
				z-index 2000
				padding 20px
				box-shadow 1px 1px 4px light-grey-color
				width 300px
				right 0px
				top 52px
				
				> .line
					display inline-block
					border-bottom 1px solid grey
					padding 10px 0px
					
					> img
						margin-right 20px
					
				> .line:last-child
					border none
					

.row.menu-and-search
	height 60px
	position relative

	.menu-main 
		padding-right 0px
		// background #22b5cd
		
		> a
			color white
			text-align center
			height 100%
			line-height 60px
			background url("../images/sandwich-button.png") light-blue-color;
			background-repeat no-repeat
			background-position 10px center
			display block
			text-decoration none
			padding-left 40px
			text-align left
			
		> a:hover
			background url("../images/sandwich-button.png") black no-repeat 10px center;
			
	> .collapse, .collapse.in, .collapsing
		position: absolute;
		background: white; 
		max-width: 300px
		z-index 100
		top 60px
		padding-left: 0px;
		margin-left: 15px;
		
		> ul
			margin 0px 
			padding 0px
			width 300px
			list-style-type none
			
			li .submenu 
				display none
				position absolute
				top 0px 
				left 300px
				width 838px
				background white
				padding 7px 0px 7px 0px
				height 100%
				box-shadow 1px 1px 10px black
				font-family "OpenSansRegular"
				
				
				> ul 
					list-style-type none
					
					> li
						font-family "OpenSansBold"
						margin-bottom 10px
						
						> ul
							font-family "OpenSansRegular"
							list-style-type none
				
			li a
				background url("../images/arrow-to-bottom.png") black no-repeat 280px center;
				background black
				color white
				padding 5px 
				text-decoration none
				display block
				padding 7px 20px 7px 20px
		
			li a:hover
				background url("../images/arrow-to-bottom.png") #22b5cd no-repeat 280px center;;
				
			li a:hover + .submenu,  li a + .submenu:hover
				display block

	> .search-field
		height 100%
		padding-left 0px
		
		input
			border 3px solid light-blue-color
			display block
			height 54px
			outline none
			padding 0px 10px 0px 40px
			line-height 54px
			width 100%
			height 100%
			background url("../images/icon-search.png") no-repeat 10px center
		
// Основная таблица продуктов	
.row.novinki
	
	h2	
		color: dark-black-color
		font-size: 26px;
		line-height: 24px;
	
	.one-product .additional_block
		display none
		
		> .rate
			padding 0px 10px
			line-height 27px
			height 27px

			> .num 
				background url("../images/rateback.png")
				line-height 27px
				display block
				width 44px
				padding-left 8px 
				float left
				margin-right 5px
				
			> .est
				float right
			
		> .icons
			padding 0px 10px
			margin-bottom 10px
			
			> * 
				margin-right 5px

		>.icons img
			padding 10px 
			border 1px solid #cbcbcb
			vertical-align top
			
		> .icons > .tocart
			background url("../images/tocart.png") light-blue-color no-repeat 20px center
			height 40px 
			line-height 40px
			color white
			padding 10px 20px 10px 50px
			width 130px
			margin-right 0px
	
	.one-product
		position relative
		border 3px solid #f4f4f4
		
		&:hover
			border 3px solid #00b8d2
		
		&:hover .additional_block
			display block
		
		> .feature-label
			position absolute
			top 10px
			right 10px
			width 50px
			height 50px
			border-radius 50%
			font-size: 14px;
			text-align center
			line-height 50px
			color white
			z-index 1000
			
		> .feature-label.hit
			background-color: #f54d19;
			
		> .feature-label.new
			background-color: #93cd22;
					
		.image
			height 300px
			line-height 300px
			background white
			text-align center
			
			img
				display inline
				vertical-align middle
							
		.description 
			padding 23px 20px 50px 20px
			text-align center
			background-color: #f8f8f8;
			
			a 
				display block
				margin 0px auto 20px auto
				text-align center
				text-decoration underline
				color light-blue-color
				
			> .price 
				color: dark-black-color
				font-size: 18px;
				font-family "OpenSansBold"
				margin-right 10px
				
			> .wasprice
				color: #e4003a;
				font-size: 12px;
				text-decoration: line-through;
				vertical-align top

