body
	font-family "OpenSansRegular"
	background-color: #f4f4f4;
	
.grey
	color: #b8b8b8;

.light-grey
	color: #b0b0b0;

// Используется в бейджах, активном пункте меню, фон для строки поиска
light-blue-color = #22b5cd
// Фон для шапки
dark-black-color = #2e2e2e

.light-blue
	background-color: light-blue-color

.text-uppercase
	text-transform uppercase

.badge 
	font-size 11px
	vertical-align middle
	
.navbar-collapse
	padding 0px
	
.white-container
	background white
	padding 45px 0px

.container.main
	// padding-bottom 112px
		
.container.content
	padding-bottom 112px
	
.navbar	
	background dark-black-color
	border-radius none
	height 49px
		
	.navbar-nav > li
		font-size: 11px;
		font-weight: 400
		color white
		line-height 49px
		
		> a, a:visited 
			color white
			position relative
			padding-left 30px
			vertical-align middle
			
			> .badge
				margin-left 10px
				padding: 6px 10px;
				display: inline-block;
				vertical-align: top;
				
		> a:hover
			color light-blue-color
		
		> a:after
			content " | "
			position: absolute;
			top: 14px;
			right: -7px;
			color: #4f4f4f;
			
	.navbar-nav > li:last-child > a:after
		display none
			
	.navbar-nav > li.active a 
		background initial
		color light-blue-color
		
.navbar-right
	font-size 13px

.navbar-right .favicon img, .navbar-right .compare img, .navbar-right .login img
	margin-right 10px

.navbar-right .favicon a
	background url("../images/icon-heart.png")
	background-position left center
	background-repeat no-repeat

.navbar-right .compare a
	background url("../images/icon-compare.png")
	background-position left center
	background-repeat no-repeat
	

.navbar-right .login a:before
	display block
	position absolute
	content " "
	border 1px solid light-blue-color
	padding 5px
	line-height 30px
	width: 100px;
	margin-left: -19px;
	height: 29px;
	margin-top: -3px;

.header
	margin-bottom 40px
		
	> .center-vert-text
		line-height 78px
		color #b8b8b8
		
		> img
			margin-right 10px
		
	> .phone
		color: dark-black-color
		font-size: 18px;
		font-family "OpenSansBold"
		height 78px
		padding-top 20px
		
		> span
			color: light-blue-color;
			font-size 13px
			font-family "OpenSansRegular"
			border-bottom 1px dashed light-blue-color
			
	> .cart-header-block
		padding-top 20px

		> img 
			margin-right 20px
			
		> .cart-header
			color: dark-black-color
			font-size: 16px;
			font-family "OpenSansBold"
			
		> .badge
			position absolute
			left 40px
			top 20px
			
		> .summ
			color: #959595;
			
			> span
				color: #555;
				
		> .cart-block
			position absolute
			background white
			z-index 2000

.row.menu-and-search
	height 60px
	position relative

	.menu-main 
		padding-right 0px
		// background #22b5cd
		
		> a
			color white
			text-align center
			height 100%
			line-height 60px
			background url("../images/sandwich-button.png") light-blue-color;
			background-repeat no-repeat
			background-position 10px center
			display block
			text-decoration none
			padding-left 40px
			text-align left
			
		> a:hover
			background url("../images/sandwich-button.png") black no-repeat 10px center;
			
	> .collapse, .collapse.in, .collapsing
		position: absolute;
		background: white; 
		max-width: 300px
		z-index 100
		top 60px
		
		> ul
			margin 0px 
			padding 0px
			width 300px
			list-style-type none
			
			li .submenu 
				display none
				position absolute
				top 0px 
				left 300px
				width 855px
				background white
				padding 7px 0px 7px 0px
				height 100%
				box-shadow 1px 1px 10px black
				
				
				ul 
					list-style-type none

			li a
				// background url("../images/arrow-to-bottom.png") black no-repeat 280px center;
				background black
				color white
				padding 5px 
				text-decoration none
				display block
				// padding 7px 20px 7px 20px
		
			li a:hover
				// background url("../images/arrow-to-bottom.png") #22b5cd no-repeat 280px center;;
				
			li a:hover + .submenu,  li a + .submenu:hover
				display block

	> .search-field
		height 100%
		padding-left 0px
		
		input
			border 3px solid light-blue-color
			display block
			height 54px
			outline none
			padding 0px 10px
			line-height 54px
			width 100%
			height 100%
		
// Основная таблица продуктов	
.row.novinki
	
	h2	
		color: dark-black-color
		font-size: 26px;
		line-height: 24px;
	
	.one-product .additional_block
		display none
		
		> .rate
			padding 0px 10px
			line-height 27px
			height 27px

			> .num 
				background url("../images/rateback.png")
				line-height 27px
				display block
				width 44px
				padding-left 8px 
				float left
				margin-right 5px
				
			> .est
				float right
			
		> .icons
			padding 0px 10px
			margin-bottom 10px
			
			> * 
				margin-right 5px

		>.icons img
			padding 10px 
			border 1px solid #cbcbcb
			vertical-align top
			
		> .icons > .tocart
			background url("../images/tocart.png") light-blue-color no-repeat 20px center
			height 40px 
			line-height 40px
			color white
			padding 10px 20px 10px 50px
			width 130px
			margin-right 0px
	
	.one-product
		position relative
		border 3px solid #f4f4f4
		
		&:hover
			border 3px solid #00b8d2
		
		&:hover .additional_block
			display block
		
		> .feature-label
			position absolute
			top 10px
			right 10px
			width 50px
			height 50px
			border-radius 50%
			font-size: 14px;
			text-align center
			line-height 50px
			color white
			z-index 1000
			
		> .feature-label.hit
			background-color: #f54d19;
			
		> .feature-label.new
			background-color: #93cd22;
					
		.image
			height 300px
			line-height 300px
			background white
			text-align center
			
			img
				display inline
				vertical-align middle
							
		.description 
			padding 23px 20px 50px 20px
			text-align center
			background-color: #f8f8f8;
			
			a 
				display block
				margin 0px auto 20px auto
				text-align center
				text-decoration underline
				color light-blue-color
				
			> .price 
				color: dark-black-color
				font-size: 18px;
				font-family "OpenSansBold"
				
			> .wasprice
				color: #e4003a;
				font-size: 12px;
				text-decoration: line-through;
				vertical-align top

.container-fluid.brands
	padding 30px 45px
	
	.row
		border 1px solid #d2d2d2
		
		.brand-list
			padding 58px 108px 0px 108px
			text-align center
			
			h3 
				position absolute
				left 0px 
				top -34px
				text-align center
